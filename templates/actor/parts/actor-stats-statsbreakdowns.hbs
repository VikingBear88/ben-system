<section class="stats-breakdowns">

  {{!-- one-row summary --}}
  <div class="lp-row">
    <div><strong>Level Points Earned:</strong> {{system.statsBreakdown.points.earned}}</div>
    <div><strong>Points Spent:</strong> {{system.statsBreakdown.points.spent}}</div>
    <div><strong>Points To Spend:</strong> {{system.statsBreakdown.points.remaining}}</div>
  </div>

  <table class="stat-table">
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Base</th>
        <th>Level Points</th>
        <th>Gear Bonus</th>
        <th>Misc Bonus</th>
        <th>Temp Bonus</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Strength --}}
      <tr>
        <td class="attr"><strong>Strength</strong></td>
        <td>{{system.statsBreakdown.raceBase.str}}</td>
        <td>
          <div class="with-steppers">
            <button type="button" class="stepper dec" data-path="system.abilities.str.level">−</button>
            <input type="number" name="system.abilities.str.level" value="{{system.abilities.str.level}}" min="0"/>
            <button
              type="button"
              class="stepper inc"
              data-path="system.abilities.str.level"
              {{#unless system.statsBreakdown.points.remaining}}disabled aria-disabled="true"{{/unless}}
            >+</button>
          </div>
        </td>
        {{!-- READ-ONLY: equipped gear total --}}
        <td class="gear-total">{{equippedTotals.str}}</td>
        <td>
          <div class="with-steppers">
            <button type="button" class="stepper dec" data-path="system.abilities.str.misc">−</button>
            <input type="number" name="system.abilities.str.misc" value="{{system.abilities.str.misc}}"/>
            <button type="button" class="stepper inc" data-path="system.abilities.str.misc">+</button>
          </div>
        </td>
        <td>
          <div class="with-steppers">
            <button type="button" class="stepper dec" data-path="system.abilities.str.temp">−</button>
            <input type="number" name="system.abilities.str.temp" value="{{system.abilities.str.temp}}"/>
            <button type="button" class="stepper inc" data-path="system.abilities.str.temp">+</button>
          </div>
        </td>
      </tr>

